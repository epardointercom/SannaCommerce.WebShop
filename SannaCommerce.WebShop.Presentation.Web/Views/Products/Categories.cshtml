@using SannaCommerce.WebShop.Presentation.Web.Models
@model ProductsModel
@{
    ViewBag.Title = "Product Categories";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Categories", "Products", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdProduct)
    foreach (var item in Model.AllCategories.OrderBy(x => x.Name))
    {
        <div>
            <input name="ProductCategories" id="@item.IdCategory" value="@item.IdCategory" type="checkbox" @(Model.Categories.Exists(x => x.IdCategory == item.IdCategory) ? "checked" : "") />
            <label for="@item.IdCategory">@item.Name</label>
        </div>
    }
    <button class="btn btn-success" type="submit">Submit</button>
}
<h5><a href="~/Categories"><< Categories</a></h5>